<section class="content-box p-3">
  <div
    id="form-box"
    class="d-flex flex-column justify-content-center align-items-center"
  >
    <h1 class="fs-1">Editando Associado: {{usuario.nome_usuario}}</h1>
    <form
      action="/usuarios/update/save/func={{funcionario.id}}&user={{usuario.id}}"
      method="post"
      id="form-cadastro"
      class="w-50 p-3 d-flex flex-column gap-2"
    >
      <div class="mb-3">
        <label for="nome" class="form-label">Nome:</label>
        <input
          class="form-control"
          type="text"
          name="nome"
          id="nome"
          value="{{usuario.nome_usuario}}"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="cpf">CPF:</label>
        <input class="form-control" value="{{usuario.cpf_usuario}}"  type="text" name="cpf" id="cpf" required />
      </div>
      <div class="mb-3">
        <label class="form-label" for="email">Email:</label>
        <input
          class="form-control"
          type="email"
          name="email"
          id="email"
          value="{{usuario.email_usuario}}"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="dataNasc">Data de Nascimento:</label>
        <input
          class="form-control"
          type="date"
          name="dataNasc"
          id="data-nasc"
          value="{{usuario.data_nascimento_usuario}}"
        />
      </div>
      <div class="d-flex align-items-center gap-3">
        <label for="nome" class="form-label">Gênero:</label>
        {{#if genero}}
        <select class="form-select-sm" name="genero">
          <option value="Mulher" selected>Mulher</option>
          <option value="Homem">Homem</option>
        </select>
        {{else}}
        <select class="form-select-sm" name="genero">
          <option value="Homem" selected>Homem</option>
          <option value="Mulher">Mulher</option>
        </select>
        {{/if}}
      </div>
      <br>
      <label for="nome" class="form-label">Motivo da alteração:</label>
      <textarea name="textarea" id="textarea" cols="30" rows="10" placeholder="Digite o motivo da alteração do associado" required></textarea>
      <button
        type="submit"
        class="btn btn-primary w-25 align-self-center"
      >Atualizar</button>
      <a  class="align-self-center w-100 btn"
          style="color: #fff; text-decoration: none;"
          href="/menu/funcionario/{{idFunc}}/visualizar"
        ><button type="button" class="btn btn-primary w-25">Voltar</button></a>
      
    </form>
  </div>
</section>